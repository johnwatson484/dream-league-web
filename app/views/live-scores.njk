{% extends '_layout.njk' %}

{% block content %}
  <h2>Live scores</h2>

  {% if matches.length %}
  <table class="table table-hover table-sm small">
  {% for match in matches %}
    <tr>
      <td>{{ match.competition }}</td>
      <td>{{ match.homeTeam }}</td>
      <td>{{ match.homeScore }}</td>
      <td> v </td>
      <td>{{ match.awayScore }}</td>
      <td>{{ match.awayTeam }}</td>
    </tr>
  {% endfor %}
  </table>
  {% else %}
  <div class="alert alert-info">
    No live matches
  </div>
{% endif %}
{% endblock %}
