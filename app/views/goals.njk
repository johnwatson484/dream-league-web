{% extends '_layout.njk' %}

{% block content %}
  <h2>Goals</h2>

  {%if goals.length %}
    <table class="table table-hover table-sm small">
      <tr>
        <th>Gameweek</th>
        <th>Player</th>
        <th>Team</th>
        <th></th>
      </tr>
      {% for goal in goals %}
        <tr>
          <td>{{ goal.gameweekId }}</td>
          <td>{{ goal.player.fullName }}</td>
          <td>{{ goal.player.team.name }}</td>
          <td>
            {% if auth.isAdmin %}
            <a href="/goal/delete?goalId={{ goal.goalId }}">Delete</a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </table>
  {% else %}
    <div class="alert alert-info">
      No goals scored.
    </div>
  {% endif %}
{% endblock %}
