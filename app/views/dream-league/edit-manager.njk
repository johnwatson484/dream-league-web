{% extends '_layout.njk' %}

{% block content %}
  <div class="col-md-6">
    {% if error %}
      <div class="alert alert-danger">
        {{ error }}
      </div>
    {% endif %}
    <form method="POST" action="/dream-league/manager/edit">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      <input type="hidden" id="managerId" name="managerId" value="{{ manager.managerId }}"> 
       <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ manager.name }}">
      </div>
      <div class="form-group">
        <label for="alias">Alias</label>
        <input type="text" class="form-control" id="alias" name="alias" value="{{ manager.alias }}">
      </div>
      <div class="form-group">
        <label for="email1">Emails</label>
        <input type="text" class="form-control" id="email1" name="emails[0]" value="{{ manager.emails[0].address }}">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" id="email2" name="emails[1]" value="{{ manager.emails[1].address }}">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
{% endblock %}
