{% extends '_layout.njk' %}

{% block content %}
  <div class="col-md-6">
    {% if error %}
      <div class="alert alert-danger">
        {{ error }}
      </div>
    {% endif %}
    <h2>Delete group</h2>
    <p>Are you sure wish to delete {{ group.name }}?</p>
    <form method="POST" action="/dream-league/group/delete">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      <input type="hidden" id="groupId" name="groupId" value="{{ group.groupId }}"> 
      <button type="submit" class="btn btn-primary">Confirm</button>
      <a href="/dream-league/groups">Cancel</a>
    </form>
  </div>
{% endblock %}
