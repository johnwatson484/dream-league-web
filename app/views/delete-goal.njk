{% extends '_layout.njk' %}

{% block content %}
  <div class="col-md-6">
    {% if error %}
      <div class="alert alert-danger">
        {{ error }}
      </div>
    {% endif %}
    <h2>Delete goal</h2>
    <p>Are you sure wish to delete goal for {{ goal.player.fullName }}?</p>
    <form method="POST" action="/goal/delete">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      <input type="hidden" id="goalId" name="goalId" value="{{ goal.goalId }}"> 
      <button type="submit" class="btn btn-primary">Confirm</button>
      <a href="/goals">Cancel</a>
    </form>
  </div>
{% endblock %}
